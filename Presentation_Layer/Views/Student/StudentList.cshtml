@model BOL.CommonEntites.StudentModule

<!DOCTYPE html>
<html>
<head>
    <title>Student List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 0px;
        }

        .header-row {
            margin-bottom: 20px;
        }

            .header-row h3 {
                margin: 0;
            }

            .header-row a {
                float: right;
                margin-top: 10px;
            }

        .table-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table thead th {
            background-color: #007bff;
            color: white;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-row row">
            <div class="col-lg-6">
                <h3>Students List</h3>
            </div>
            <div class="col-lg-6">
                <a href="/Student/CreateStudent" class="btn btn-primary">Add New Student</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="table-container">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">StudentId</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model != null && Model.StudentList != null && Model.StudentList.Count() > 0)
                                {
                                    foreach (var item in Model.StudentList)
                                    {
                                        <tr>
                                            <th scope="row">@item.StudentId</th>
                                            <td>@item.First_Name</td>
                                            <td>@item.Last_Name</td>
                                            <td>@item.Email</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4">No students available.</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
