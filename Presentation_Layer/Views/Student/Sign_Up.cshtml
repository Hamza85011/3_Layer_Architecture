<!DOCTYPE html>
<html>
<head>
    <title>Add New Student</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 0px;
        }

        .form-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            width: 100%;
            font-size: 18px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-container">
                    <div class="form-title">Add New Student</div>
                    <form asp-controller="Student" asp-action="Sign_Up_Student">
                        <div class="form-group">
                            <label for="Name">Full Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Your Full Name" required>
                        </div>
                        <div class="form-group">
                            <label for="UserName">UserName</label>
                            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Enter Your User_Name" required>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="number" class="form-control" id="Password" name="Password" placeholder="Enter your Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Sign_Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
